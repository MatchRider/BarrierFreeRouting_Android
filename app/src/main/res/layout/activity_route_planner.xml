<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.disablerouting.route_planner.view.RoutePlannerActivity">

    <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <org.osmdroid.views.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/contentContainer"
            android:layout_height="match_parent"/>

    <android.support.v7.widget.SwitchCompat
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_large"
            android:visibility="gone"
            android:layout_below="@id/contentContainer"
            android:layout_gravity="center"
    />

    <RadioGroup
            android:layout_below="@id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_centerHorizontal="true">

        <RadioButton
                android:text="Route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonRoutes"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/padding_normal"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/custom_btn_radio"
                tools:text="Route"/>

        <RadioButton
                android:text="Validated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonValidated"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/padding_normal"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/custom_btn_radio"
                android:layout_weight="1"/>

        <RadioButton
                android:text="Not Validated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/padding_normal"
                android:background="@drawable/custom_btn_radio"
                android:id="@+id/radioButtonNotValidated"/>
    </RadioGroup>
    <ImageView
            android:id="@+id/img_re_center"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_recenter"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/padding_xxx_large"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"/>
    <Button
            android:id="@+id/btn_go"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="@string/go"
            android:layout_margin="@dimen/margin_xxlarge"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_normal"
            android:textAllCaps="false"
            android:fontFamily="@font/frutiger_lt_bold"
            android:background="@drawable/circle_shape"/>
    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:visibility="gone"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/circle_progress">
    </ProgressBar>

</RelativeLayout>
