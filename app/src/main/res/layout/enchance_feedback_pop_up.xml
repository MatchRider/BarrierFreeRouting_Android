<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:padding="@dimen/padding_large"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">
    <Button
            android:id="@+id/btn_title"
            android:layout_width="match_parent"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/margin_normal"
            android:textSize="@dimen/text_xlarge"
            android:gravity="center_horizontal"
            android:background="@drawable/rectangle_transparent"
            android:padding="@dimen/padding_xlarge"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:fontFamily="@font/frutiger_light"
            android:text="@string/please_help_us_to_envhane_this_trip_leg"
            android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical|center_horizontal"
                  android:layout_marginBottom="@dimen/margin_small"
                  android:padding="@dimen/padding_normal"
                  android:layout_below="@+id/btn_title"
                  android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_sorry_no"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/circle_transparent"
                android:padding="@dimen/padding_large"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:fontFamily="@font/frutiger_light"
                android:text="@string/sorry_no"
                tools:ignore="ButtonStyle"/>

        <Button
                android:id="@+id/btn_ok"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal"
                android:gravity="center"
                android:background="@drawable/circle_transparent"
                android:padding="@dimen/padding_large"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:fontFamily="@font/frutiger_light"
                android:text="@string/ok"
        />
    </LinearLayout>
</RelativeLayout>
