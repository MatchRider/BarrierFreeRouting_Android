<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/padding_xlarge"
              android:layout_height="wrap_content" android:baselineAligned="false">

    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="5.5"
                  android:orientation="vertical"
                  android:layout_gravity="center_vertical"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txv_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:textSize="@dimen/text_normal"
                tools:text="fsdfsd"
                android:drawablePadding="@dimen/padding_normal"
                android:drawableStart="@drawable/ic_circular_shape"
                android:fontFamily="@font/frutiger_lt_bold"
                android:textColor="@android:color/black"/>

        <TextView
                android:id="@+id/txv_list_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_xxx_large"
                android:paddingEnd="@dimen/margin_small"
                android:textSize="@dimen/text_normal"
                tools:text="fsdfsd"
                android:textStyle="italic"
                android:visibility="visible"
                android:fontFamily="@font/frutiger_light"
                android:textColor="@color/colorPrimary"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_gravity="center_vertical"
                  android:padding="@dimen/padding_normal"
                  android:layout_weight="1"
                  android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="true"/>
    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_gravity="center_vertical"
                  android:paddingTop="@dimen/padding_normal"
                  android:paddingBottom="@dimen/padding_normal"
                  android:paddingEnd="@dimen/padding_normal"
                  android:layout_weight="3.5"
                  android:layout_height="wrap_content"
                  tools:ignore="RtlSymmetry">

        <CheckBox
                android:id="@+id/chk_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_verify"
                android:clickable="true"
                android:textColor="@color/colorTextGray"
                android:contentDescription="@string/app_name"
                android:focusable="true"/>
    </LinearLayout>

</LinearLayout>
