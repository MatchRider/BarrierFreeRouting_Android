<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_22dp"
                android:paddingTop="@dimen/padding_22dp">

            <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:src="@drawable/ic_face_black_48dp"
                    android:contentDescription="@string/app_name"/>

            <LinearLayout
                    android:id="@+id/info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toEndOf="@+id/img_profile"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/txv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_xlarge"
                        android:fontFamily="@string/ft_bold_font"
                        android:text="@string/user_name"/>
                <TextView
                        android:id="@+id/txv_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_xlarge"
                        android:text="@string/user_detail"/>

            </LinearLayout>
        </RelativeLayout>

        <View
                android:id="@+id/separator_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_dark"/>

        <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_normal"
                android:divider="@null"
        />

</LinearLayout>