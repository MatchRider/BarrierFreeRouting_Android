<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Toolbar layout -->
    <RelativeLayout
        android:id="@+id/rly_logo_menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/back_btn_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/navigation_btn"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_menu_ham"
                android:tint="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_route_planner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:background="@drawable/btn_ripple"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/frutiger_lt_bold"
                android:gravity="center"
                android:paddingStart="@dimen/padding_xxx_large"
                android:paddingTop="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_xxx_large"
                android:paddingBottom="@dimen/padding_normal"
                android:text="@string/route_planner"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_xlarge"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:background="@drawable/btn_ripple"
                android:fontFamily="@font/frutiger_lt_bold"
                android:gravity="center"
                android:paddingStart="@dimen/padding_xxx_large"
                android:paddingTop="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_xxx_large"
                android:paddingBottom="@dimen/padding_normal"
                android:text="@string/suggestions"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_xlarge"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_osm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:background="@drawable/btn_ripple"
                android:fontFamily="@font/frutiger_lt_bold"
                android:gravity="center"
                android:paddingStart="@dimen/padding_xxx_large"
                android:paddingTop="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_xxx_large"
                android:paddingBottom="@dimen/padding_normal"
                android:text="OSM"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_xlarge"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frame_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />
</android.support.v4.widget.DrawerLayout>
